#include <msp430g2553.h>
#include "UART_Ctrl_Launchpad.h"

void OUTA_UART(unsigned char A) {
	do {
	} while ((IFG2 & 0x02) == 0);
	UCA0TXBUF = A;
}
unsigned char INCHAR_UART(void) {
	do {
	} while ((IFG2 & 0x01) == 0);
	return (UCA0RXBUF);
}
void Init_UART(void) {
	BCSCTL1 = CALBC1_1MHZ;
	DCOCTL = CALDCO_1MHZ;
	P1SEL = 0x06;
	P1SEL2 = 0x06;

	UCA0CTL0 = 0;
	UCA0CTL1 = 0x81;
	UCA0BR1 = 0;
	UCA0BR0 = 0x68;
	UCA0MCTL = 0x06;
	UCA0STAT = 0;
	UCA0CTL1 = 0x80;
	IE2 = 0;
}

