
function draw(){
  var c = document.getElementById('canvas');
  var W = 'width';
  var H = 'height';
  var context = c.getContext('2d');  
  
  
  R = Math.random;
  resize = function () {
    c[W] = innerWidth;
    c[H] = innerHeight;
    L = []
  };
  resize();
  addEventListener('resize', resize, 0);
  
  O = function () {
      return {
        x: c[W]* R() ,
        y: c[H] * R(),
        z: 3,
        s: '#' + Math.ceil(R() * 0xffffff).toString(16)
      }
    
  };
  
  function update(){
    context.fillStyle = 'rgba(0,0,0,.02)';
    context.fillRect(0, 0, c[W], c[H]);
    // If L array contains less than the screen width, Push to L array
    if (L.length < c[H]) L.push(O());
    L.forEach(function (o) {
      context.lineWidth = o.z;
      context.strokeStyle = o.s;
      context.beginPath();
      context.moveTo(o.x, o.y);
      o.x += 18 * R() - 9;
      o.y += 18 * R() - 9;
      context.lineTo(o.x, o.y);
      context.stroke();
      z = Math.min(Math.max(o.z + R() - .5, 1), 30)
    })
  }

  setInterval(update, 40)



}
new draw();

document.write("<style>*{margin:0;background:#000;position:absolute}</style>")
