#include <stdio.h>
#include <stdlib.h>

int toBinary(int n, int bits){
    if ( n <= 0 ){
        return bits ;
    }
    else{
        int i = toBinary(n/2,bits-1);
        printf("%d",n%2);
        return i ;
    }
}


int main(){
    int userIn = 0;
    printf("\nEnter decimal:");
    scanf("%d",&userIn);
    printf("\n");
    int x = toBinary(userIn,8);
    printf("\nBits Req.:%d",x);
}

