import java.util.Arrays ;

public class Binaryz{
    public Boolean[] binary1 ;
    public Boolean[] binary2 ;

public Binaryz(char[] bin1, char[] bin2 ){



    	this.binary1 = new Boolean[bin1.length];
		this.binary2 = new Boolean[bin2.length];



        for ( int i = 0 ; i < bin1.length ; i++ ){
        	if ( bin1[i] == '0' ){
        		binary1[i] = false ;
        	}
        	else{
        		binary1[i] = true ;
        	}
        }

        for ( int i = 0 ; i < bin2.length ; i++ ){
        	if ( bin2[i] == '0' ){
        		binary2[i] = false ;
        	}
        	else{
        		binary2[i] = true ;
        	}
        }
//        binary2 = signExtend(binary2, bin1.length);
        Boolean[] sum = binAdd(binary1,binary2);
        this.print(binary1, 1);
        this.print(binary2, 2);


    }


//    public Boolean[] multiply(Boolean[] bin1, Boolean[] bin2, int index ){
//
//    }
    public Boolean[] shiftL(Boolean[] bin, int num){
    	Boolean[] rtn = new Boolean[bin.length+num];
    	Arrays.fill(rtn,false);
    	System.arraycopy(bin, 0, rtn, num, bin.length);
    	return rtn ;
    }
    public Boolean[] binAdd(Boolean[] bin1, Boolean[] bin2){
        Boolean[] bin = new Boolean[binary1.length+1];
        Arrays.fill(bin,false);
        Boolean carry = false ;

        for ( int i = 0 ; i < binary1.length ; i++ ){
            // Calculate Bit result
            bin[i] = (bin1[i] ^ bin2[i] ^ carry);
            carry =  bin1[i]&bin2[i] | (carry&(bin1[i] ^ bin2[i] ));
        }
        if (carry == true) bin[binary1.length] = carry ;
        return bin ;
    }
    public Boolean[] signExtend(Boolean[] bin, int newSize){
    	Boolean[] rtn = new Boolean[newSize];
    	Arrays.fill(rtn,false);
    	for ( int i = 0 ; i < bin.length ; i++ ){
    		rtn[i] = bin[i];
    	}
    	return rtn ;
    }
    public void print(Boolean[] binary, int num){
    	System.out.print("\nBinary"+num+": ");
    	for ( Boolean b : binary2 ){
    		if ( b ) System.out.printf("1");
    		else System.out.printf("0");
    	}
    }


    public static void main(String[] args){
        char[] b1 = {'0','0','1','0','1','1'};
        char[] b2 = {'1','1','1','1','0','0'};
        Binary binbin = new Binary(b2,b1);


    }
}
